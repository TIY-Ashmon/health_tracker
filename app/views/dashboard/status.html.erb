<body>
<header>
<h1>Your Personal Health Tracker</h1>
<h2>Dashboard</h2>
</header>

<%= render 'layouts/navigation' %>



<h3>Progress</h3>


<%if @total== 0 %>
  <h4>Please enter your stats to see your progress!</h4>

<%else%>
<p>Your most recent weight: <%= @latest_weight %> lbs </p>
  <ul class="chart">
    <li class="bar teal" style="height: <%=@weight_lost_percent %>%;">
      <div class="percent"><%=@total_weight_lost %>lbs</div>
      <div class="activity">Weight Lost</div></li>
    <li class="bar blue" style="height: <%=@exercises_percent %>%;">
      <div class="percent"><%= @total_exercises %></div>
      <div class="activity">Exercises</div></li>
    <li class="bar purple" style="height: <%=@steps_percent %>%;">
      <div class="percent"><%=@total_steps %></div>
      <div class="activity">Steps</div></li>
    <li class="bar green" style="height: <%=@calories_percent %>%;">
      <div class="percent"><%=@total_calories_consumed %></div>
      <div class="activity">Calories Consumed</div></li>
  </ul>
<%end%>
</body>
